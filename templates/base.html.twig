<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Vendor Valley
			{% endblock %}
		</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}

		{# Font Awesome #}
		<script src="https://kit.fontawesome.com/bd7ff58664.js" crossorigin="anonymous"></script>
	</head>
	<body>

		{% block nav %}
			{{include('components/nav.html.twig')}}
		{% endblock %}

		<main>
		
			<div class="container flash-container">
				<div class="row pt-2">
					<div class="col-12">
						{% for message in app.flashes('error')  %}
							{{include('components/toast.html.twig',{flashType:'danger',flashMessage:message})}}
						{% endfor %}
					</div>

					<div class="col-12">
						{% for message in app.flashes('success')  %}
							{{include('components/flash.html.twig',{flashType:'success',flashMessage:message})}}
						{% endfor %}
					</div>
				</div>
			</div>

			{% block body %}{% endblock %}
		</main>

		{% block footer %}
			{{include('components/footer.html.twig')}}
		{% endblock %}

	</body>
</html>
