<div class="profile-navbar user-navbar bg-primary text-white rounded mb-5">

	<ul class="d-flex p-3">
        <li class="p-2">
			<a href="{{path('app_user_profile',{'id':user.id})}}">Profile</a>
		</li>

        {% if is_granted('ROLE_ADMIN') %}
			<li class="p-2">
				<a  href="#">Admin</a>
			</li>
		{% endif %}

		{% set vendor = user.getVendor %}
		{% if vendor %}
			<li class="p-2">
				<a href="{{path('app_vendor_profile',{'id':vendor.id})}}">{{vendor}}</a>
			</li>
		{% endif %}

		<li class="p-2">
			<a href="#">Orders</a>
		</li>
		
		<li class="p-2">
			<a href="#">Payment</a>
		</li>
	</ul>
</div>
