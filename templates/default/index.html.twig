{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Home
{% endblock %}

{% block body %}

	<div class="container my-5 p-3" {{stimulus_controller('product')}} data-action="event-dispatcher:event_addToCart@document->product#addToCart product:event_updateCartItemsCount@document->global#updateCartItemsCount">


		{% for vendor in vendors %}

			<div class="vendor-container row mb-5">
				<div class="col-12 px-0">
					<h1 class="fs-2 fw-bold">{{vendor}}</h1>
					<hr/>
				</div>

				<div class="col-12">
					<div class="products-container row">
						{% for product in vendor.products %}

							<div class="product-container col-sm-12 col-md-6 col-lg-3 my-3">
								<a href="#product">
									{{include('components/product_card.html.twig',{product:product})}}
								</a>
							</div>

						{% else %}
							<tr>
								<td colspan="7">No Products Found</td>
							</tr>
						{% endfor %}

					</div>
				</div>
			</div>
		{% else %}
			<tr>
				<td colspan="7">No Vendors Found</td>
			</tr>
		{% endfor %}
	</div>


{% endblock %}
