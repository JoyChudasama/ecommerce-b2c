{% extends 'base.html.twig' %}

{% block title %}
	{{app.user}}
	|
	Orders
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}

	<div class="container my-5 p-3">

		<div class="row">
			<div class="col-sm-12 col-md-12 col-lg-12">
				{{include('components/profile_navbar.html.twig')}}
			</div>
		</div>

		<div class="row">
			<div class="col-sm-12 col-md-12 col-lg-12">

				{% for order in orders %}
					{{include('components/order_card.html.twig')}}
				{% else %}
					No Orders Found
				{% endfor %}

			</div>
		</div>

	</div>

{% endblock %}
