<div>
	<div class="row">
		<div class="col-12">
			{% for message in app.flashes('error')  %}
				{{include('components/flash.html.twig',{flashType:'danger',flashMessage:message})}}
			{% endfor %}
		</div>
	</div>

	{{ form_start(form) }}

	<div class="row">
		<div class="col-sm-12 col-md-12">
			{{form_row(form.email)}}
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12 col-md-6">
			{{form_row(form.password)}}
		</div>
		<div class="col-sm-12 col-md-6">
			{{form_row(form.confirmPassword)}}
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12 col-md-6">
			{{form_row(form.firstName)}}
		</div>
		<div class="col-sm-12 col-md-6">
			{{form_row(form.lastName)}}
		</div>
	</div>
	{% if not is_granted('ROLE_ADMIN') %}
		<div class="row">
			<div class="col-sm-12 col-md-12">
				{{form_row(form.type)}}
			</div>
		</div>
	{% endif %}
	<div class="row">
		<div class="col-sm-12 col-md-6">
			{{form_row(form.city)}}
		</div>
		<div class="col-sm-12 col-md-6">
			{{form_row(form.province)}}
		</div>
	</div>

	<div class="row button-container pt-3">
		<div class="col-sm-12 col-md-3">
			<button class="btn btn-md btn-success" data-user-registration-target="submitButton">Update</button>
		</div>
	</div>


	{{ form_widget(form._token) }}
	{{ form_end(form,{'render_rest':false}) }}

</div>
