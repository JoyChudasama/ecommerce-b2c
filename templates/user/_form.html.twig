<div>
	<div class="row">
		<div class="col-12">
			{% for message in app.flashes('error')  %}
				{{include('components/flash.html.twig',{flashType:'danger',flashMessage:message})}}
			{% endfor %}
		</div>
	</div>

	{{ form_start(form) }}

	<div class="row">
		<div class="col-sm-12 col-md-6">
			{{form_row(form.email,{'attr':{'data-user-registration-target':'emailInput'}})}}
		</div>
		<div class="col-sm-12 col-md-6 has-validation">
			{{form_row(form.confirmEmail,{'attr':{'data-user-registration-target':'confirmEmailInput','data-action':'user-registration#matchEmail'}})}}
		</div>

	</div>
	{% if form.password is defined %}

		<div class="row">
			<div class="col-sm-12 col-md-6">
				{{form_row(form.password,{'attr':{'data-user-registration-target':'passwordInput'}})}}
			</div>
			<div class="col-sm-12 col-md-6">
				{{form_row(form.confirmPassword,{'attr':{'data-user-registration-target':'confirmPasswordInput','data-action':'user-registration#matchPassword'}})}}
			</div>
		</div>

	{% endif %}

	<div class="row">
		<div class="col-sm-12 col-md-6">
			{{form_row(form.firstName)}}
		</div>
		<div class="col-sm-12 col-md-6">
			{{form_row(form.lastName)}}
		</div>
	</div>

	{% if form.type is defined and not is_granted('ROLE_ADMIN') %}
	
		<div class="row">
			<div class="col-sm-12 col-md-12">
				{{form_row(form.type)}}
			</div>
		</div>
	
	{% endif %}
	
	<div class="row">
		<div class="col-sm-12 col-md-6">
			{{form_row(form.city)}}
		</div>
		<div class="col-sm-12 col-md-6">
			{{form_row(form.province)}}
		</div>
	</div>

	<div class="row button-container pt-3">
		<div class="col-sm-12 col-md-3">
			<button class="btn btn-md btn-success" data-user-registration-target="submitButton">Register</button>
		</div>
		<div class="col-sm-12 col-md-4 text-center">
			<p>Already a Member?
				<a href="{{ path('app_login') }}">Login</a>
			</p>
		</div>
	</div>


	{{ form_widget(form._token) }}
	{{ form_end(form,{'render_rest':false}) }}

</div>
