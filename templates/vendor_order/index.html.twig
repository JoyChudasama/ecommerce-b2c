{% extends 'base.html.twig' %}

{% block title %}
	{{app.user.vendor}}
	|
	Orders
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}

	<div class="container my-5 p-3">

		<div class="row">
			<div class="col-sm-12 col-md-12 col-lg-12">
				{{include('components/vendor_navbar.html.twig')}}
			</div>
		</div>

		<div class="row">
			<div class="col-sm-12 col-md-12 col-lg-12">

				{% for vendorOrder in vendor_orders %}

					{{include('components/order_card.html.twig',
                        {
                            orderNumber:vendorOrder.orderNumber,
                            createdAt:vendorOrder.createdAt,
                            viewOrderLink:'#',
                            numberOfItems:vendorOrder.vendorOrderItems|length,
                            grandTotal:vendorOrder.vendorOrderInvoice.grandTotal,
                        })
                    }}

				{% else %}
					No Orders Found
				{% endfor %}

			</div>
		</div>

	</div>

{% endblock %}
